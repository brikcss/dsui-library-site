{
	"name": "@brikcss/dsui-library-site",
	"version": "0.0.0-development",
	"description": "DirectScale UI Library site, built with BrikCSS.",
	"author": "DirectScale <https://directscale.com>",
	"contributors": [
		"The Zimmee <thezimmee@gmail.com>"
	],
	"homepage": "https://github.com/brikcss/dsui-library-site",
	"repository": {
		"type": "git",
		"url": "https://github.com/brikcss/dsui-library-site.git"
	},
	"bugs": {
		"url": "https://github.com/brikcss/dsui-library-site/issues"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/prompt"
		}
	},
	"publishConfig": {
		"tag": "dev",
		"access": "public"
	},
	"husky": {
		"hooks": {
			"pre-commit": "cross-env NODE_ENV=production node ./node_modules/.bin/pre-commit-lint",
			"commit-msg": "commitlint -e $GIT_PARAMS && . ./node_modules/.bin/commit-msg-stamp-branch ${GIT_PARAMS}",
			"pre-push": ". ./node_modules/.bin/pre-push-check-stage && echo \"\n[ok] Pushing code...\""
		}
	},
	"scripts": {
		"prestart": "npm run prebuild && concurrently \"npm run compile:css\" \"npm run compile:homepage\" \"npm run copy:fonts\" \"npm run copy:assets\"",
		"start": "concurrently \"npm run watch\" \"npm run serve\"",
		"pretest": "echo \"\nRunning tests...\n\" && npm run build",
		"test": "cross-env NODE_ENV=production concurrently --kill-others-on-fail --names=css,js \"npm run lint:css\" \"npm run lint:js\"",
		"posttest": "echo \"\n[ok] Tests complete.\n\"",
		"prepublish": "npm test && echo \"Publishing to github pages...\"",
		"publish": "gh-pages -d ./dist/angularjs --repo https://thezimmee@github.com/brikcss/dsui-library-site.git",
		"// TASKS": "// Below this line are helper tasks and typically won't need to be called by user.",
		"prebuild": "rimraf dist --glob=false",
		"build": "concurrently --names=css,js,home,fonts,assets --kill-others-on-fail \"npm run compile:css\" \"npm run compile:js\" \"npm run compile:homepage\" \"npm run copy:fonts\" \"npm run copy:assets\"",
		"compile:homepage": "stak --config=.stakcssrc.js:html_angularjs,html_vanillajs",
		"compile:js": "rollup --config=.rolluprc.js",
		"compile:css": "stak --config=.stakcssrc.js:sass,css",
		"copy:fonts": "stak --config=.stakcssrc.js:fonts",
		"copy:assets": "stak --config=.stakcssrc.js:assets,assets_angularjs,svg,svg_angularjs",
		"lint:js": "node_modules/.bin/eslint src/**/*.js --format=stylish",
		"postlint:js": "echo \"[ok] JS lint complete.\"",
		"lint:css": "node_modules/.bin/stylelint src/**/*.{.css,.scss} --format=stylish",
		"postlint:css": "echo \"[ok] SASS lint complete.\"",
		"serve": "browser-sync start --config ./.browsersync.js",
		"watch": "concurrently --raw \"npm run watch:js\" \"npm run watch:css\" \"npm run watch:homepage\" \"npm run watch:partials\"",
		"watch:homepage": "npm run compile:homepage -- --watch",
		"watch:partials": "watch src/pages/partials/**/* --exec \"rollup --config=.rolluprc.js\"",
		"watch:js": "npm run compile:js -- --watch",
		"watch:css": "npm run compile:css -- --watch"
	},
	"devDependencies": {
		"@brikcss/core": "0.0.2",
		"@brikcss/eslint-config": "0.1.3",
		"@brikcss/git-hooks": "1.0.7",
		"@brikcss/merge": "1.0.7",
		"@brikcss/spinner": "0.1.3",
		"@brikcss/stakcss": "0.7.1",
		"@brikcss/stakcss-bundler-copy": "0.1.0",
		"@brikcss/stakcss-bundler-ejs": "0.0.1",
		"@brikcss/stakcss-bundler-postcss": "0.0.1",
		"@brikcss/stakcss-bundler-sass": "0.0.2",
		"@brikcss/watcher-cli": "1.0.0",
		"@commitlint/cli": "6.1.0",
		"@mdi/svg": "2.3.54",
		"angular": "1.6.4",
		"angular-ui-router": "0.4.2",
		"autoprefixer": "8.2.0",
		"babel-core": "6.26.0",
		"babel-plugin-external-helpers": "6.22.0",
		"babel-preset-env": "1.6.1",
		"browser-sync": "2.23.6",
		"concurrently": "3.5.1",
		"cross-env": "5.1.3",
		"document-register-element": "1.8.1",
		"eslint": "4.17.0",
		"gh-pages": "1.1.0",
		"highlight.js": "9.12.0",
		"hyperhtml": "2.10.0",
		"markdown-it": "8.4.1",
		"markdown-it-attrs": "1.2.1",
		"markdown-it-container": "2.0.0",
		"markdown-it-include": "1.0.0",
		"markdown-it-task-lists": "2.1.1",
		"mocha": "4.1.0",
		"mocha-better-spec-reporter": "3.1.0",
		"nyc": "11.4.1",
		"postcss-reporter": "5.0.0",
		"prettier": "1.12.1",
		"rimraf": "2.6.2",
		"rollup": "0.57.1",
		"rollup-plugin-babel": "3.0.3",
		"rollup-plugin-commonjs": "9.1.0",
		"rollup-plugin-node-resolve": "3.3.0",
		"rollup-plugin-prettier": "0.4.0",
		"rollup-plugin-string": "2.0.2",
		"rollup-plugin-uglify": "3.0.0",
		"router5": "6.1.3",
		"stylelint": "9.1.3",
		"stylelint-formatter-pretty": "1.0.3",
		"stylelint-scss": "2.3.0",
		"svgo": "1.0.5"
	}
}
