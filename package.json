{
	"name": "@brikcss/dsui-library-site",
	"version": "0.0.0-development",
	"description": "DirectScale UI Library site, built with BrikCSS.",
	"author": "DirectScale <https://directscale.com>",
	"contributors": [
		"The Zimmee <thezimmee@gmail.com>"
	],
	"homepage": "https://github.com/brikcss/dsui-library-site",
	"repository": {
		"type": "git",
		"url": "https://github.com/brikcss/dsui-library-site.git"
	},
	"bugs": {
		"url": "https://github.com/brikcss/dsui-library-site/issues"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/prompt"
		}
	},
	"publishConfig": {
		"tag": "dev",
		"access": "public"
	},
	"husky": {
		"hooks": {
			"pre-commit": "cross-env NODE_ENV=production node ./node_modules/.bin/pre-commit-lint",
			"commit-msg": "commitlint -e $HUSKY_GIT_PARAMS && . ./node_modules/.bin/commit-msg-stamp-branch ${HUSKY_GIT_PARAMS}",
			"pre-push": ". ./node_modules/.bin/pre-push-check-stage && echo \"\n[ok] Pushing code...\""
		}
	},
	"scripts": {
		"prestart": "npm run build",
		"start": "concurrently \"npm run watch\" \"npm run serve\"",
		"pretest": "echo \"\nRunning tests...\n\" && npm run build",
		"test": "cross-env NODE_ENV=production concurrently --kill-others-on-fail --names=css,js \"npm run lint:css\" \"npm run lint:js\"",
		"posttest": "echo \"\n[ok] Tests complete.\n\"",
		"preghpages": "cross-env NODE_ENV=production npm test && echo \"Publishing to github pages...\"",
		"ghpages": "gh-pages -d ./dist --repo https://thezimmee@github.com/brikcss/dsui-library-site.git",
		"// TASKS": "// Below this line are helper tasks and typically won't need to be called by user.",
		"prebuild": "rimraf dist --glob=false",
		"build": "concurrently --names=css,js,home,assets --kill-others-on-fail \"npm run compile:css\" \"npm run compile:js\" \"npm run compile:homepage\" \"npm run copy:assets\"",
		"compile:homepage": "stak --config=.stakcssrc.js:html",
		"compile:js": "rollup --config=.rolluprc.js",
		"compile:css": "stak --config=.stakcssrc.js:css",
		"copy:assets": "stak --config=.stakcssrc.js:assets,svg",
		"lint:js": "node_modules/.bin/eslint src/**/*.js --format=stylish",
		"postlint:js": "echo \"[ok] JS lint complete.\"",
		"lint:css": "node_modules/.bin/stylelint src/**/*.{.css} --format=stylish",
		"postlint:css": "echo \"[ok] SASS lint complete.\"",
		"serve": "browser-sync start --config ./.browsersync.js",
		"watch": "concurrently --raw \"npm run watch:js\" \"npm run watch:css\" \"npm run watch:homepage\" \"npm run watch:partials\"",
		"watch:homepage": "npm run compile:homepage -- --watch",
		"watch:partials": "watch src/pages/partials/**/* --exec \"rollup --config=.rolluprc.js\"",
		"watch:js": "npm run compile:js -- --watch",
		"watch:css": "npm run compile:css -- --watch"
	},
	"devDependencies": {
		"@brikcss/browser-reset": "0.1.1",
		"@brikcss/core": "0.1.1",
		"@brikcss/eslint-config": "0.1.4",
		"@brikcss/git-hooks": "1.2.1",
		"@brikcss/merge": "1.0.7",
		"@brikcss/spinner": "0.1.3",
		"@brikcss/stakcss": "0.8.0",
		"@brikcss/stakcss-bundler-copy": "0.1.0",
		"@brikcss/stakcss-bundler-ejs": "0.0.1",
		"@brikcss/stakcss-bundler-postcss": "0.4.0",
		"@brikcss/stakcss-bundler-sass": "0.2.0",
		"@brikcss/stylelint-config-css": "0.1.4",
		"@brikcss/watcher-cli": "1.0.0",
		"@commitlint/cli": "7.2.1",
		"@mdi/svg": "3.0.39",
		"@webcomponents/shadydom": "1.2.0",
		"autoprefixer": "9.3.1",
		"babel-plugin-external-helpers": "6.22.0",
		"babel-preset-env": "1.7.0",
		"browser-sync": "2.26.3",
		"concurrently": "4.0.1",
		"cross-env": "5.2.0",
		"document-register-element": "1.13.1",
		"eslint": "5.8.0",
		"gh-pages": "2.0.1",
		"gray-matter": "4.0.1",
		"hyperhtml": "2.16.4",
		"jss": "9.8.7",
		"jss-preset-default": "4.5.0",
		"markdown-it": "8.4.2",
		"markdown-it-attrs": "2.3.2",
		"markdown-it-container": "2.0.0",
		"markdown-it-include": "1.0.0",
		"markdown-it-task-lists": "2.1.1",
		"mocha": "5.2.0",
		"mocha-better-spec-reporter": "3.1.0",
		"nyc": "13.1.0",
		"postcss-apply": "0.11.0",
		"postcss-csso": "3.0.0",
		"postcss-font-magician": "2.2.1",
		"postcss-import": "12.0.1",
		"postcss-mixins": "6.2.0",
		"postcss-preset-env": "6.4.0",
		"postcss-pxtorem": "4.0.1",
		"postcss-reporter": "6.0.0",
		"prettier": "1.15.1",
		"prismjs": "1.15.0",
		"rimraf": "2.6.2",
		"rollup": "0.67.0",
		"rollup-plugin-babel": "4.0.3",
		"rollup-plugin-babel-minify": "6.1.1",
		"rollup-plugin-commonjs": "9.2.0",
		"rollup-plugin-node-resolve": "3.4.0",
		"rollup-plugin-postcss": "1.6.2",
		"rollup-plugin-prettier": "0.4.0",
		"rollup-plugin-replace": "2.1.0",
		"rollup-plugin-string": "2.0.2",
		"router5": "6.6.2",
		"stylelint": "9.7.1",
		"svgo": "1.1.1"
	}
}
